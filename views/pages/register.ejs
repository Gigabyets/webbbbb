<script>
    function switchTab(tab) {
        const loginContent = document.getElementById('content-login');
        const registerContent = document.getElementById('content-register');
        const loginTab = document.getElementById('tab-login');
        const registerTab = document.getElementById('tab-register');

        if (tab === 'login') {
            // Show Login
            loginContent.classList.remove('hidden');
            registerContent.classList.add('hidden');
            
            // Style Active Tab
            loginTab.classList.add('text-yellow-400', 'border-yellow-400', 'bg-gray-800/50');
            loginTab.classList.remove('text-gray-400', 'border-transparent');
            
            // Style Inactive Tab
            registerTab.classList.add('text-gray-400', 'border-transparent');
            registerTab.classList.remove('text-yellow-400', 'border-yellow-400', 'bg-gray-800/50');
        } else {
            // Show Register
            registerContent.classList.remove('hidden');
            loginContent.classList.add('hidden');
            
            // Style Active Tab
            registerTab.classList.add('text-yellow-400', 'border-yellow-400', 'bg-gray-800/50');
            registerTab.classList.remove('text-gray-400', 'border-transparent');
            
            // Style Inactive Tab
            loginTab.classList.add('text-gray-400', 'border-transparent');
            loginTab.classList.remove('text-yellow-400', 'border-yellow-400', 'bg-gray-800/50');
        }
    }
</script>

