<script>
    // Slider Logic
    let currentSlide = 0;
    const slider = document.getElementById('promo-slider');
    const items = document.querySelectorAll('.slider-item');
    
    function moveSlider(dir) {
        if(!items || !items.length) return;
        currentSlide = (currentSlide + dir + items.length) % items.length;
        updateSlider();
    }

    function goToSlide(index) {
        currentSlide = index;
        updateSlider();
    }

    function updateSlider() {
        if(!slider) return;
        slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        document.querySelectorAll('.slider-dot').forEach((dot, i) => {
            dot.classList.toggle('bg-yellow-500', i === currentSlide);
            dot.classList.toggle('w-6', i === currentSlide);
            dot.classList.toggle('bg-white/50', i !== currentSlide);
        });
    }

    if (items && items.length > 1) {
        setInterval(() => moveSlider(1), 6000);
        updateSlider();
    }

